rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    match /users/{userId}/profile.jpg {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    match /shops/{userId}/{shopId}/cover.jpg {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    match /shops/{userId}/{shopId}/gallery/{imageId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    match /shops/{userId}/{shopId}/menu/{imageId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
  }
}
