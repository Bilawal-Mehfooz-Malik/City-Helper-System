rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    match /users/{userId}/profile.jpg {
      allow read: if true;
      allow write, delete: if request.auth.uid == userId;
    }

    match /shops/{userId}/{shopId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth.uid == userId;
    }
  }
}
